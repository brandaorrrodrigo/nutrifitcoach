-- Quem pode ver a foto
CREATE TYPE visibility AS ENUM ('private','followers','public');

-- Resultado de moderação
CREATE TYPE moderation_status AS ENUM ('pending','approved','rejected');

-- De onde veio a foto
CREATE TYPE capture_source AS ENUM ('mobile','web','whatsapp','telegram','upload');

-- Categoria (expandível por tabela lookups depois)
CREATE TYPE meal_type AS ENUM ('breakfast','lunch','dinner','snack','preworkout','postworkout');

-- Motivos de rejeição (curto, livre; catálogo opcional em tabela)
